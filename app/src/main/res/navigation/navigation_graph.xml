<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.adrianhelo.culinaryrecipes.presentation.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_newRecipesFragment"
            app:destination="@id/newRecipesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateRecipesFragment"
            app:destination="@id/updateRecipesFragment" />
    </fragment>
    <fragment
        android:id="@+id/newRecipesFragment"
        android:name="com.adrianhelo.culinaryrecipes.presentation.ui.fragments.NewRecipesFragment"
        android:label="fragment_new_recipes"
        tools:layout="@layout/fragment_new_recipes" >
        <action
            android:id="@+id/action_newRecipesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateRecipesFragment"
        android:name="com.adrianhelo.culinaryrecipes.presentation.ui.fragments.UpdateRecipesFragment"
        android:label="fragment_update_recipes"
        tools:layout="@layout/fragment_update_recipes" >
        <action
            android:id="@+id/action_updateRecipesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="recipe"
            app:argType="com.adrianhelo.culinaryrecipes.domain.model.RecipeModel"
            app:nullable="true"/>
    </fragment>
</navigation>